    //IF x%y == 0
    //   {
    //       DISPLAY yes it is a multiple
    //    }
    //ELSE IF x%y>0
    //     {
    //        DISPLAY no it is NOT a multiple
    //     }
    
    int isMultiple(int x,int y)
    {
        if(x%y==0)
            {
                cout << "Yes it is a multiple. " << endl;      
            }
        else if (x%y>0)
            {
                 cout << "No it is NOT a multiple. " << endl; 
            }
    }
